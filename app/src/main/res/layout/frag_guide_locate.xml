<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_eighteen"
    android:layout_marginRight="@dimen/dp_eighteen"
    android:layout_marginTop="@dimen/dp_hundred_twele"
    android:background="@drawable/input_locate_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/guide_outset_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_forty_four">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_sixteen"
            android:background="@drawable/main_circle_one" />

        <TextView
            android:id="@+id/main_outset_tv"
            style="@style/textView_Black"
            android:layout_centerInParent="true"
            android:hint="@string/main_current_tip"
            android:textSize="@dimen/sp_fourteen" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_one"
        android:background="@color/colorLinePart" />

    <RelativeLayout
        android:id="@+id/guide_destination_rl"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_forty_four">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_sixteen"
            android:background="@drawable/main_circle_two" />

        <TextView
            android:id="@+id/main_destination_tv"
            style="@style/textView_Black"
            android:layout_centerInParent="true"
            android:hint="@string/main_destination_hint" />
    </RelativeLayout>
</LinearLayout>
