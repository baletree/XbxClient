<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include layout="@layout/page_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_sixteen"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_twelve">

        <RelativeLayout
            android:id="@+id/pay_detail_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_fifty_six">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/payD_MonTip_tv"
                    style="@style/textView_Black"
                    android:text="成功支付"
                    android:textSize="@dimen/sp_eighteen" />

                <TextView
                    style="@style/textView_Black"
                    android:layout_marginLeft="@dimen/dp_four"
                    android:text="@string/pay_yuan"
                    android:textSize="@dimen/sp_fourteen" />

                <TextView
                    android:id="@+id/payD_aMony_tv"
                    style="@style/textView_Black"
                    android:text="100"
                    android:textSize="@dimen/sp_thirty" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:layout_marginLeft="@dimen/dp_sixteen"
            android:layout_marginRight="@dimen/dp_sixteen"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_fifty_two"
            android:layout_marginRight="@dimen/dp_fifty_two"
            android:layout_marginTop="@dimen/dp_twelve">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务费"
                android:textColor="@color/color_pay"
                android:textSize="@dimen/sp_fourteen" />

            <TextView
                android:id="@+id/payD_Sever_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥100"
                android:textColor="@color/color_pay"
                android:textSize="@dimen/sp_fourteen" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_fifty_two"
            android:layout_marginRight="@dimen/dp_fifty_two"
            android:layout_marginTop="@dimen/dp_eight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打赏"
                android:textColor="@color/color_pay"
                android:textSize="@dimen/sp_fourteen" />

            <TextView
                android:id="@+id/payD_Reward_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥10"
                android:textColor="@color/color_pay"
                android:textSize="@dimen/sp_fourteen" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_fifty_two"
            android:layout_marginRight="@dimen/dp_fifty_two"
            android:layout_marginTop="@dimen/dp_eight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠"
                android:textColor="@color/color_pay"
                android:textSize="@dimen/sp_fourteen" />

            <TextView
                android:id="@+id/payD_Coupon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥10"
                android:textColor="@color/color_pay"
                android:textSize="@dimen/sp_fourteen" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
