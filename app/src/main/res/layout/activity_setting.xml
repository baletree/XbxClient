<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include layout="@layout/page_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_zero_five"
        android:layout_marginTop="@dimen/dp_sixteen"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_sixteen"
        android:paddingRight="@dimen/dp_sixteen">

        <RelativeLayout
            android:id="@+id/setting_user_guide_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/setting_user_guide"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_fifteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/menu_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLinePart" />

        <RelativeLayout
            android:id="@+id/setting_consumer_hotline_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/setting_consumer_hotline"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_fifteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/menu_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLinePart" />

        <RelativeLayout
            android:id="@+id/setting_legal_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/setting_legal"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_fifteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/menu_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLinePart" />

        <RelativeLayout
            android:id="@+id/setting_about_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/setting_about"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_fifteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/menu_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLinePart" />

        <RelativeLayout
            android:id="@+id/setting_feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/setting_feedback"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_fifteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/menu_arrow" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_zero_five"
        android:background="@color/colorLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_zero_five"
        android:layout_marginTop="@dimen/dp_sixteen"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/setting_sign_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_forty_eight"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/setting_sign_out"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp_fifteen" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_zero_five"
        android:background="@color/colorLine" />

</LinearLayout>
