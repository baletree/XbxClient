<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_sixty_four"
    android:layout_alignParentBottom="true"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_sixty_four"
        android:layout_gravity="center"
        android:background="@color/colorTextBack"
        android:layout_marginLeft="@dimen/dp_sixteen"
        android:layout_marginRight="@dimen/dp_sixteen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/frag_reservat_tv"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="@dimen/dp_forty"
            android:layout_weight="0.58"
            android:background="@drawable/button_bg"
            android:layout_gravity="center_vertical"
            android:text="@string/main_reserve"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_sixteen"
            android:textSize="@dimen/dp_fourteen" />

        <TextView
            android:id="@+id/frag_immedia_tv"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="@dimen/dp_forty"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_bg"
            android:layout_gravity="center_vertical"
            android:text="@string/main_call"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_fourteen" />
    </LinearLayout>
</RelativeLayout>
