<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/version_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_twenty"
    android:paddingRight="@dimen/dp_twenty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_tip_bg"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="@dimen/dp_sixteen">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现新版本"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_seventeen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_six"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新版本"
                android:textColor="@color/dialog_msg"
                android:textSize="@dimen/sp_fourteen" />

            <TextView
                android:id="@+id/new_versioncode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dialog_msg"
                android:textSize="@dimen/sp_fourteen" />
        </LinearLayout>

        <TextView
            android:id="@+id/new_versionmsg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_six"
            android:text="有新版本更新"
            android:textColor="@color/dialog_msg"
            android:textSize="@dimen/sp_fourteen" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_twenty"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_five"
                android:paddingTop="@dimen/dp_five"
                android:text="取消安装"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/sp_fourteen" />

            <TextView
                android:id="@+id/update_submit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_eight"
                android:paddingLeft="@dimen/dp_five"
                android:paddingTop="@dimen/dp_five"
                android:text="立即安装"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/sp_fourteen" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
