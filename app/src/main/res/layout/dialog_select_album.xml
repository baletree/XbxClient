<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_album_take_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight"
            android:text="@string/select_album_take_photo"
            android:textSize="@dimen/sp_fifteen"
            android:background="@android:color/white"
            android:textColor="@color/colorText"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine"/>

        <TextView
            android:id="@+id/select_album_photo_gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight"
            android:text="@string/select_album_photo_gallery"
            android:textSize="@dimen/sp_fifteen"
            android:background="@android:color/white"
            android:textColor="@color/colorText"
            android:gravity="center"/>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_eight"
            android:background="@color/colorLine"/>-->

        <TextView
            android:id="@+id/select_album_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty_eight"
            android:text="@string/cancel"
            android:textSize="@dimen/sp_fifteen"
            android:background="@android:color/white"
            android:layout_marginTop="@dimen/dp_eight"
            android:textColor="@color/colorTheme"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
