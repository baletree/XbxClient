<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <include
        android:id="@+id/comment_title_layout"
        layout="@layout/page_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submit_comm_btn"
        android:layout_below="@+id/comment_title_layout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/order_guide_info" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_sixteen"
                android:layout_marginRight="@dimen/dp_sixteen"
                android:layout_marginTop="@dimen/dp_thirty_one">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_zero_five"
                    android:layout_centerVertical="true"
                    android:background="@color/colorLine" />

                <TextView
                    style="@style/textView_Hint"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorBackground"
                    android:paddingLeft="@dimen/dp_sixteen"
                    android:paddingRight="@dimen/dp_sixteen"
                    android:text="@string/pays_money"
                    android:textSize="@dimen/sp_fifteen" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_twenty"
                android:orientation="horizontal">

                <TextView
                    style="@style/textView_Black"
                    android:text="888"
                    android:textSize="@dimen/sp_thirty" />

                <TextView
                    style="@style/textView_Black"
                    android:text="å…ƒ"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_sixteen"
                android:layout_marginRight="@dimen/dp_sixteen">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_zero_five"
                    android:layout_centerVertical="true"
                    android:background="@color/colorLine" />

                <TextView
                    style="@style/textView_Hint"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorBackground"
                    android:paddingLeft="@dimen/dp_sixteen"
                    android:paddingRight="@dimen/dp_sixteen"
                    android:text="@string/guide_assess"
                    android:textSize="@dimen/sp_fifteen" />
            </RelativeLayout>

            <RatingBar
                style="@style/roomRatingBar_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_sixteen"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="0" />

            <com.xbx.client.view.FlowLayout
                android:id="@+id/comment_tag_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_fourteen"
                android:layout_marginRight="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_ten" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_sixty"
                android:layout_marginBottom="@dimen/dp_thirty"
                android:layout_marginLeft="@dimen/dp_fifteen"
                android:layout_marginRight="@dimen/dp_fifteen"
                android:layout_marginTop="@dimen/dp_eight"
                android:background="@color/colorWhite"
                android:gravity="top"
                android:hint="@string/comment_txt"
                android:padding="@dimen/dp_five"
                android:textSize="@dimen/sp_fifteen" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/submit_comm_btn"
        style="@style/submit_btn"
        android:layout_alignParentBottom="true"
        android:text="@string/submit_comment" />
</RelativeLayout>
