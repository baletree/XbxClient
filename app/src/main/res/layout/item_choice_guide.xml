<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_ninety_six"
    android:background="@color/colorBackground">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/guide_head_img"
        android:layout_width="@dimen/dp_sixty_four"
        android:layout_height="@dimen/dp_sixty_four"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_sixteen"
        android:src="@mipmap/user_head"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_sixteen"
        android:layout_toRightOf="@+id/guide_head_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/re_guiName_tv"
            style="@style/textView_Black"
            android:text="辛晓琪"
            android:textSize="@dimen/sp_eighteen" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/dp_eighty"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/re_guiPrice_tv"
                    style="@style/textView_Black"
                    android:textSize="@dimen/sp_twelve"
                    android:text="500/小时"/>
                <TextView
                    android:id="@+id/re_guiPriceTxt_tv"
                    style="@style/textView_Black"
                    android:textSize="@dimen/sp_eleven"
                    android:text="价格"/>
                <RatingBar
                    android:id="@+id/re_guide_ratingbar"
                    style="@style/roomRatingBar_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="1.95" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/re_guiCount_tv"
                    style="@style/textView_Black"
                    android:textSize="@dimen/sp_twelve"
                    android:text="166次"/>
                <TextView
                    android:id="@+id/re_guiType_tv"
                    style="@style/textView_Black"
                    android:textSize="@dimen/sp_eleven"
                    android:text="导游"/>
                <TextView
                    android:id="@+id/re_guiStar_tv"
                    style="@style/textView_Black"
                    android:textSize="@dimen/sp_eleven"
                    android:text="9.7分"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_sixteen"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/re_lookdetail_btn"
            android:layout_width="@dimen/dp_sixty_four"
            android:layout_height="@dimen/dp_twenty_eight"
            android:background="@drawable/button_bg"
            android:text="@string/look_detail"
            android:textSize="@dimen/sp_fourteen"
            android:textColor="@color/colorWhite"/>
        <Button
            android:id="@+id/re_giveOrder_btn"
            android:layout_width="@dimen/dp_sixty_four"
            android:layout_height="@dimen/dp_twenty_eight"
            android:background="@drawable/button_bg"
            android:text="@string/give_order_immedia"
            android:textSize="@dimen/sp_fourteen"
            android:layout_marginTop="@dimen/dp_eight"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</RelativeLayout>
