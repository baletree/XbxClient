<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTextBack"
        android:paddingBottom="@dimen/dp_sixteen">
        <TextView
            style="@style/textView_Black"
            android:textSize="@dimen/sp_sixteen"
            android:layout_marginTop="@dimen/dp_sixteen"
            android:text="@string/call_count_title"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/guide_opeo_tv"
            style="@style/peoNumChoice_txt"
            android:layout_marginTop="@dimen/dp_sixteen"
            android:text="@string/call_count_one"/>
        <TextView
            android:id="@+id/guide_fpeo_tv"
            style="@style/peoNumChoice_txt"
            android:layout_marginTop="@dimen/dp_four"
            android:text="@string/call_count_two"/>
        <TextView
            android:id="@+id/guide_speo_tv"
            style="@style/peoNumChoice_txt"
            android:layout_marginTop="@dimen/dp_four"
            android:text="@string/call_count_three"/>
        <TextView
            android:id="@+id/guide_tpeo_tv"
            style="@style/peoNumChoice_txt"
            android:layout_marginTop="@dimen/dp_four"
            android:text="@string/call_count_four"/>
    </LinearLayout>
</RelativeLayout>
