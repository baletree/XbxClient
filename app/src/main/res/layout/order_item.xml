<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_hundred"
    android:background="@color/colorTitle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_sixteen"
            android:layout_marginRight="@dimen/dp_sixteen">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/order_time_tv"
                    style="@style/textView_Black"
                    android:text="4月7号 23：10"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_fourteen"/>
                <TextView
                    android:id="@+id/order_guidetype_tv"
                    android:layout_width="@dimen/dp_thirty_six"
                    android:layout_height="@dimen/dp_seventeen"
                    android:textColor="@color/colorThemeLight"
                    android:layout_marginLeft="@dimen/dp_sixteen"
                    android:textSize="@dimen/sp_twelve"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/guide_type_bg"
                    android:text="随游"/>
            </LinearLayout>
            <TextView
                android:id="@+id/order_state_tv"
                style="@style/textView_Black"
                android:textSize="@dimen/sp_fifteen"
                android:text="已完成"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_sixteen"
            android:layout_marginRight="@dimen/dp_sixteen"
            android:layout_marginTop="@dimen/dp_four">
            <TextView
                android:id="@+id/order_address_tv"
                style="@style/textView_Black"
                android:text="青城山前山门"
                android:textSize="@dimen/sp_fifteen"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_sixteen"
            android:layout_marginRight="@dimen/dp_sixteen"
            android:layout_marginTop="@dimen/dp_four">
            <TextView
                android:id="@+id/order_type_tv"
                style="@style/textView_Black"
                android:text="即时服务"
                android:textSize="@dimen/sp_fifteen"/>
            <TextView
                android:id="@+id/order_pay_tv"
                style="@style/textView_Black"
                android:text="￥100"
                android:textColor="@color/mainCircle2"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_fifteen"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
