<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_twelve" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty"
            android:paddingLeft="@dimen/dp_sixteen"
            android:paddingRight="@dimen/dp_sixteen">

            <TextView
                android:id="@+id/order_state_tv"
                style="@style/textView_Black"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="@dimen/sp_fourteen" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    style="@style/textView_Black"
                    android:layout_alignParentRight="true"
                    android:text="金额 ￥ "
                    android:textSize="@dimen/sp_fourteen" />

                <TextView
                    android:id="@+id/order_pay_tv"
                    style="@style/textView_Black"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="@dimen/sp_fourteen" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_sixteen"
            android:paddingRight="@dimen/dp_sixteen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_twelve"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/order_time" />

                    <TextView
                        android:id="@+id/order_time_tv"
                        style="@style/textView_Black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_six"
                        android:text=""
                        android:textSize="@dimen/sp_fourteen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_twelve"
                    android:layout_marginRight="@dimen/dp_sixteen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/order_locate" />

                    <TextView
                        android:id="@+id/order_address_tv"
                        style="@style/textView_Black"
                        android:layout_marginLeft="@dimen/dp_six"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="@dimen/sp_fourteen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_twelve"
                    android:paddingBottom="@dimen/dp_sixteen"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_type_tv"
                        android:layout_width="@dimen/dp_fifteen"
                        android:layout_height="@dimen/dp_fifteen"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/immedia_circle"
                        android:gravity="center"
                        android:text="即"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_ten" />

                    <TextView
                        android:id="@+id/order_guidetype_tv"
                        android:layout_width="@dimen/dp_fifteen"
                        android:layout_height="@dimen/dp_fifteen"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_six"
                        android:background="@drawable/immedia_circle"
                        android:gravity="center"
                        android:text="随"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_ten" />

                    <TextView
                        android:id="@+id/guiType_tv"
                        style="@style/textView_Black"
                        android:layout_marginLeft="@dimen/dp_six"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/colorHint"
                        android:textSize="@dimen/sp_fourteen" />
                    <TextView
                        android:id="@+id/serType_tv"
                        style="@style/textView_Black"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/colorHint"
                        android:textSize="@dimen/sp_fourteen" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
