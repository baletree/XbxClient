<?xml version="1.0" encoding="utf-8"?>
<com.xbx.client.view.PullScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/tour_detail_top_img"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="@dimen/dp_forty_four"
                android:layout_marginTop="-50dp"
                android:scaleType="fitXY"
                android:src="@mipmap/tour_detail_top_img" />

            <ImageView
                android:id="@+id/tour_detail_back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_sixteen"
                android:scaleType="fitXY"
                android:src="@mipmap/back1" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/tour_detail_head_img"
                android:layout_width="@dimen/dp_ninety"
                android:layout_height="@dimen/dp_ninety"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@mipmap/user_head"
                app:riv_oval="true" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tour_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_twelve"
                android:text="@string/user_info_name_text"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_eighteen" />

            <TextView
                android:id="@+id/tour_detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_eight"
                android:text="@string/user_info_name_text"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_twelve" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_eight"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/tour_detail_ratingbar"
                    style="@style/roomRatingBar_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3" />

                <TextView
                    android:id="@+id/tour_detail_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_eight"
                    android:text="@string/user_info_nickname_text"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_ten" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_one"
                android:layout_marginTop="@dimen/dp_twelve"
                android:background="@drawable/div_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_thirteen"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/together_price"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_twelve" />

                <TextView
                    android:id="@+id/tour_detail_price_byhour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:text="@string/user_info_nickname_text"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_twelve" />

                <TextView
                    android:id="@+id/tour_detail_price_byday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:text="@string/user_info_nickname_text"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_twelve" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_eight"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/together_num"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_twelve" />

                <TextView
                    android:id="@+id/tour_detail_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:text="@string/user_info_nickname_text"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_twelve" />
            </LinearLayout>

            <com.xbx.client.view.FlowLayout
                android:id="@+id/tour_detail_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_fifteen"
                android:layout_marginRight="@dimen/dp_fifteen"
                android:layout_marginTop="@dimen/dp_ten" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:layout_marginTop="@dimen/dp_four"
            android:background="@color/colorLine" />

        <TextView
            android:id="@+id/tour_detail_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/dp_eight"
            android:paddingLeft="@dimen/dp_sixteen"
            android:paddingRight="@dimen/dp_sixteen"
            android:paddingTop="@dimen/dp_eight"
            android:text="我是一个对理想有着执着追求的人，坚信是金子总会发光。为人热情，活泼，大方， 本人好学上进，诚信、敬业、责任心强，有强烈的团体精神，对工作认真积极，严谨负责。"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_twelve" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:layout_marginTop="@dimen/dp_four"
            android:background="@color/colorLine" />

        <TextView
            android:id="@+id/tour_detail_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/dp_eight"
            android:paddingLeft="@dimen/dp_sixteen"
            android:paddingRight="@dimen/dp_sixteen"
            android:paddingTop="@dimen/dp_eight"
            android:text="我是一个对理想有着执着追求的人，坚信是金子总会发光。为人热情，活泼，大方， 本人好学上进，诚信、敬业、责任心强，有强烈的团体精神，对工作认真积极，严谨负责。"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_twelve" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_zero_five"
            android:background="@color/colorLine" />


            <TextView
                android:id="@+id/tour_detail_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_forty_eight"
                android:layout_margin="@dimen/dp_sixteen"
                android:background="@drawable/theme_light_bg"
                android:gravity="center"
                android:text="@string/tour_detail_order"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_fifteen"/>
    </LinearLayout>

</com.xbx.client.view.PullScrollView>
